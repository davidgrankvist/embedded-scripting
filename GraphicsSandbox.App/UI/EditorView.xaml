<UserControl x:Class="GraphicsSandbox.App.UI.EditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphicsSandbox.App.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="local:EditorViewModel">
    <UserControl.DataContext>
        <local:EditorViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>            
        </Grid.RowDefinitions>

        <TextBox 
            Grid.Row="0" 
            AcceptsReturn="True" 
            AcceptsTab="True" 
            PreviewKeyDown="TextBox_ReplaceTabWithSpaces"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            FontFamily="Consolas"
            Text="{Binding Code, UpdateSourceTrigger=PropertyChanged}"
         />
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left">
            <Button Height="30" Margin="10" Padding="3" Command="{Binding RunCodeCommand}">Run</Button>
        </StackPanel>
    </Grid>
</UserControl>
